<%- model_class = Link -%>
<div class="page-header">
  <h2>Awesome Links!</h2>
</div>

<p>
  <%= link_to "top", {:controller => "links", :action => "index", :order_by => "points"} %>
  &nbsp;
  <%= link_to "new", {:controller => "links", :action => "index", :order_by => "created_at"} %>
</p>

<table class="table table-striped">
  <tbody>
    <% @links.each_with_index do |link, index| %>
      <tr>
        <td><small><%= index + 1 %></small></td>
        <td><small><%= link_to_if link.votable?(session[:user_id]), "<i class=\"icon-thumbs-up\"></i>".html_safe,
                link_votes_path(link),
                :method => :post %></small></td>
        <td><div class="span1">
                <small><%= link.points %> pts</small></div></td>
        <td><div class="span5"><%= link_to link.title, link.url %></td>
        <td><small><%= link.user.username %></small></div></td>
        <td><div class="span1"><small><%= time_ago_in_words(link.created_at) %> ago</small></div></td>
        <td>
          <div class="span1">
            <small><%= link_to "#{link.comment_count} comments", link_comments_path(link) %></small>
          </div>
        </td>
        <% if session[:user_id] == link.user.id %>
          <td>
            <div class="span1">
              <%= link_to "<i class=\"icon-pencil\"></i>".html_safe,
                      edit_link_path(link), :class => 'btn btn-mini' %>
              <%= link_to "<i class=\"icon-remove\"></i>".html_safe,
                      link_path(link),
                      :method => :delete,
                      :data => { :confirm => t('.confirm',
                                 :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
            </div>
          </td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @links %>
