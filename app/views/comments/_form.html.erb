<%= form_for [@link, @comment], :html => { :class => 'form-horizontal' } do |f| %>
  <% if @comment.errors.any? %>
    <div class="error_messages">
      <h3>Comment is invalid</h3>
      <ul>
        <% for message in @comment.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="control-group">
    <%= f.label :body, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :body, :class => 'text_area span4', :rows => 10 %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :user_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :user_id, :class => 'number_field', :readonly => "readonly",
          :value => @link.user.id %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :link_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :link_id, :class => 'number_field', :readonly => "readonly",
          :value => @link.id %>
    </div>
  </div>


  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                links_path, :class => 'btn' %>
  </div>
<% end %>
